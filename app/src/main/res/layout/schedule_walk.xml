<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.juniordesign.unleashedpotential.canineconcierge.ScheduleWalk">


    <TextView
        android:id="@+id/schedule_welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schedule_welcome_message"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="329dp"
        android:layout_height="302dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/schedule_welcome_message"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.533" />

    <TextView
        android:id="@+id/schedule_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/schedule_instruction"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/calendarView"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintHorizontal_bias="0.504" />

    <Button
        android:id="@+id/finish_schedule_walk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/finish_schedule_walk"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/pack_leaders_list"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ListView
        android:id="@+id/pack_leaders_list"
        android:layout_width="299dp"
        android:layout_height="104dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/schedule_instruction"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
